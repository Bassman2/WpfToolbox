<UserControl x:Class="WpfToolboxDemo.View.ColumnsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfToolboxDemo.View"
             xmlns:conv="clr-namespace:WpfToolbox.Converter;assembly=WpfToolbox"
             xmlns:ctl="clr-namespace:WpfToolbox.Controls;assembly=WpfToolbox"
             xmlns:misc="clr-namespace:WpfToolbox.Misc;assembly=WpfToolbox"
             xmlns:vm="clr-namespace:WpfToolboxDemo.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:ColumnsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:ColumnsViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <misc:BindingProxy x:Key="proxy" Data="{Binding}"/>
        <DataTemplate x:Key="buttonColumn">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/Info16.png" />
                <TextBlock Text="Edit" Margin="4,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <DataGrid
            x:Name="dataGrid"
            ItemsSource="{Binding Items}"
            CanUserSortColumns="True"
            AutoGenerateColumns="False"
            HeadersVisibility="Column"
            GridLinesVisibility="None" 
            IsSynchronizedWithCurrentItem="True"
            Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                <DataGridButtonColumn Header="DataGridButtonColumn" Text="Edit" CommandBinding="{Binding ItemButtonCommand}"/>
                <DataGridButtonColumn Header="DataGridButtonColumn" Binding="{Binding Name}" CommandBinding="{Binding Data.ButtonCommand, Source={StaticResource proxy}}"/>
                <DataGridButtonColumn Header="DataGridButtonColumn" ContentTemplate="{StaticResource buttonColumn}" CommandBinding="{Binding DataContext.ButtonCommand, ElementName=dataGrid}"/>
                <DataGridColorColumn Header="DataGridColorColumn" Binding="{Binding Color}"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}"/>
                <DataGridPasswordColumn Header="DataGridPasswordColumn" Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
