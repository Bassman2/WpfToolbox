<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:WpfToolbox.Controls"
    xmlns:prim="clr-namespace:WpfToolbox.Controls.Primitives">
  
    <Style TargetType="{x:Type ctrl:CheckComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}" >
        <Setter Property="IsEditable" Value="True"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <prim:CheckControl Content="{Binding}" ParentControl="{Binding RelativeSource={RelativeSource AncestorType=ctrl:CheckComboBox}}">
                        <prim:CheckControl.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" xml:space="preserve"/>
                            </DataTemplate>
                        </prim:CheckControl.ContentTemplate>
                    </prim:CheckControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>

       
    </Style>
</ResourceDictionary>
