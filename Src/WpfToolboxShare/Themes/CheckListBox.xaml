<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:WpfToolbox.Controls"
    xmlns:prim="clr-namespace:WpfToolbox.Controls.Primitives">
    
    <Style TargetType="{x:Type ctrl:CheckListBox}" BasedOn="{StaticResource {x:Type ListBox}}" >
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <prim:CheckControl Content="{Binding}" ParentControl="{Binding RelativeSource={RelativeSource AncestorType=ctrl:CheckListBox}}">
                        <prim:CheckControl.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" xml:space="preserve"/>
                            </DataTemplate>
                        </prim:CheckControl.ContentTemplate>
                    </prim:CheckControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
           
</ResourceDictionary>
