                    -->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type c:IntegerSlider}" BasedOn="{StaticResource Slider}" />

    <Style TargetType="{x:Type c:DoubleSlider}" BasedOn="{StaticResource Slider}" />

    <Style TargetType="{x:Type c:DecimalSlider}" BasedOn="{StaticResource Slider}" />

</ResourceDictionary>