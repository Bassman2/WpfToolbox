<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:WpfToolbox.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfToolbox;component/Themes/ToggleSwitch.xaml" />
        <ResourceDictionary Source="/WpfToolbox;component/Themes/NumericSlider.xaml" />
        <ResourceDictionary Source="/WpfToolbox;component/Themes/NumericSpin.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type c:CustomControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:CustomControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
